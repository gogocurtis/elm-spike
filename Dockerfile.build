FROM node:8 as elm_build

USER root
WORKDIR /app

RUN npm install -g yarn
RUN yarn global add elm elm-test create-elm-app

COPY elm-package.json elm-package.json
RUN cat /app/elm-package.json

COPY public/ public/
COPY src/ src/
RUN elm-app build
RUN mv build public
RUN tar zcf build.tar.gz public

