type Msg
    = SelectTab Int
    | CustomersTab CustomersView.Msg
    | EmptyTab EmptyView.Msg
    | Mdl (Material.Msg Msg)


type alias Model =
    { mdl : Material.Model
    , customersModel : CustomerModel
    , ordersModel : EmptyModel
    , inventoryModel : EmptyModel
    , selectedTab : Int
    }


type alias CustomerModel =
    { list : List String
    }


type alias EmptyModel =
    {}


